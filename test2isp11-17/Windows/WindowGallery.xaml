<Window x:Class="test2isp11_17.WindowGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:test2isp11_17.Windows"
        mc:Ignorable="d"
        Title="WindowGallery"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Margin="0,0,-150,-78">
        <Image Source="/Decoration/Gallery.jpg" Margin="-255,-144,-108,0"/>
        <Image gif:ImageBehavior.AnimatedSource="/Gifs/Nothing.gif" Margin="0,210,0,0" 
               />
        <Button
               x:Name="BtnBack" 
                Margin="600,693,612,98"
                Content="Назад"
                Click="BtnBack_Click" 
                FontSize="50"
                Foreground="White"
                Background="{x:Null}" RenderTransformOrigin="0.502,0.231"
                />
    </Grid>
</Window>

