<Window x:Class="test2isp11_17.WindowGallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:test2isp11_17.Windows"
        mc:Ignorable="d"
        Title="WindowGallery"
        Height="904.785"
        Width="1609.57"
        WindowStartupLocation="CenterScreen"
        >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="/Decoration/Gallery.jpg" Stretch="Fill"  />
        <Image gif:ImageBehavior.AnimatedSource="/Gifs/Nothing.gif" 
               />
        <Button
               x:Name="BtnBack" 
                Margin="720,752,720,35"
                Content="Назад"
                FontFamily="Times New Roman"
                Click="BtnBack_Click" 
                FontSize="50"
                Foreground="White"
                Background="{x:Null}" BorderBrush="{x:Null}"
                />
    </Grid>
</Window>

